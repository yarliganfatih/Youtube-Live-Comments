{
  "manifest_version": 2,
  "name": "Youtube Live Comments",
  "description": "Listing Comments of video have timestamp tag",
  "author": "Fatih YarlÄ±gan",
  "version": "0.1",
  "icons": { 
    "16": "icon-16.png",
   "128": "icon-128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>",
        "*://*/*",
        "https://youtube.com/watch*",
        "https://youtube.com/shorts/*"
      ], 
      "css": ["css/style.css"],
      "js": ["js/jquery-3.6.0.min.js", "js/bootstrap.bundle.min.js", "background.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon-16.png",
    "default_title": "Live Comments Controller",
    "default_popup": "popup.html"
  },

  "permissions":[
    "storage",
    "contextMenus",
    "notifications",
    "tabs",
    "https://youtube.com/watch*",
    "https://youtube.com/shorts/*"
  ]
}