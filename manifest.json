{
  "manifest_version": 2,
  "name": "Youtube Live Comments",
  "description": "Listing Comments of video have timestamp tag",
  "author": "Fatih YarlÄ±gan",
  "version": "0.2",
  "icons": { 
    "16": "icon-16.png",
   "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "css": ["css/style.css"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon-16.png",
    "default_title": "Youtube Live Comments",
    "default_popup": "popup.html"
  },
  
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "*://*.youtube.com/*"
  ]
}